<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--AuthActivity-->
    <style name="AuthToolbarStyle">
        <item name="android:paddingStart">@dimen/header_padding_start</item>
        <item name="android:paddingTop">@dimen/header_padding_top</item>
        <item name="android:paddingBottom">@dimen/header_padding_bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/Theme.Gallery</item>
    </style>

    <style name="ToolbarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <!--Login Fragment-->
    <!--Common Styles-->
    <style name="GalleryApp.TextInputStyle.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/input_hint_color</item>
        <item name="boxBackgroundColor">@color/input_back_color</item>
        <item name="boxCornerRadiusTopStart">@dimen/loginInput_cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/loginInput_cornerRadius</item>
        <item name="android:layout_marginStart">@dimen/input_margin_horizontal_avg</item>
        <item name="android:layout_marginEnd">@dimen/input_margin_horizontal_avg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/input_shadow_color</item>
        <item name="boxStrokeErrorColor">@color/input_stroke_ErrorColor</item>
        <item name="boxStrokeWidth">@dimen/input_boxStrokeWidth</item>
        <item name="boxStrokeWidthFocused">@dimen/input_boxStrokeWidthFocused</item>
        <item name="helperText">@string/input_error_text</item>
        <item name="helperTextTextColor">@color/input_stroke_ErrorColor</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="singleLine">true</item>
        <item name="android:paddingStart">@dimen/input_padding_start</item>
        <item name="android:paddingTop">@dimen/input_padding_top</item>
        <item name="android:paddingBottom">@dimen/input_padding_bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="HeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingStart">@dimen/header_padding_start</item>
        <item name="android:paddingTop">@dimen/header_padding_top</item>
        <item name="android:paddingBottom">@dimen/header_padding_bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="entry_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingTop">@dimen/entry_button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/entry_button_paddingBottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/input_margin_horizontal_avg</item>
        <item name="android:layout_marginEnd">@dimen/input_margin_horizontal_avg</item>
        <item name="android:layout_marginBottom">@dimen/entry_button_marginBottom</item>
    </style>

</resources>